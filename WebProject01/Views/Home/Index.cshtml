@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <div class="section_title text-center mb-80">
            <!--<span>Thực Đơn</span>-->
            <h3>Những món đặc trưng</h3>
        </div>
    </div>
</div>


<div>
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-6 col-sx-9">
                @foreach (var product in Model)
                 {
                    if (product.CategoryId == 1)
                    {
                        <div class="text-center">
                            <div class="thumbnail product-box">
                                <img src="@product.ProdImg" alt="" />
                                <div class="caption">
                                    <h3><strong>@product.ProdName</strong></h3>
                                    <h6>@product.ProdDes</h6>
                                    <h5><strong>@product.ProdPrice&nbsp;VND</strong></h5>
                                    <p><a href="#" class="btn btn-warning" role="button">Mua ngay</a></p>
                                </div>
                            </div>
                        </div>

                    }
                 }
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-lg-12">
        <div class="section_title text-center mb-80">
            <h4>@Html.ActionLink("(THÊM NỮA)", "Menu", "Products")</h4>
        </div>
    </div>
</div>


