
@{
    ViewBag.Title = "Sửa sản phẩm";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h2></h2>
<div class="row">
    <div class="col-lg-12">
        <div class="section_title text-center mb-80">
            <!--<span>Thực Đơn</span>-->
            <h3>Sửa và xóa sản phẩm</h3>
        </div>
    </div>
</div>


<div class="container">
    <div class="row">
        <div class="col-xl-6 col-md-6 col-lg-6">
            <div class="form-horizontal">
                <table cellpadding="10" border="1">
                    <thead>
                        <tr>
                            <th>
                                Tên
                            </th>
                            <th>
                                Mô tả
                            </th>
                            <th>
                                Ảnh
                            </th>
                            <th>
                                Loại
                            </th>
                            <th>
                                Giá
                            </th>
                            <th>
                                Sửa
                            </th>
                            <th>
                                Xóa
                            </th>
                        </tr>
                    </thead>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.ProdName</td>
                            <td>@product.ProdDes</td>
                            <td>
                                <img src="@product.ProdImg" alt="" />
                            </td>
                            <td>
                                @if (product.CategoryId == 1)
                                {
                                    <a>Burger</a>
                                }
                                @if (product.CategoryId == 2)
                                {
                                    <a>Combo</a>
                                }
                                @if (product.CategoryId == 3)
                                {
                                    <a>Gà rán</a>
                                }
                                @if (product.CategoryId == 4)
                                {
                                    <a>Cơm</a>
                                }
                                @if (product.CategoryId == 5)
                                {
                                    <a>Đồ ăn kèm</a>
                                }
                                @if (product.CategoryId == 6)
                                {
                                    <a>Thức uống</a>
                                }
                            </td>
                            <td>@product.ProdPrice</td>
                            <td>
                                <a href="@Url.Action("Edit", "Products", new { id = product.Id })">EDIT</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Delete", "Products", new { id = product.Id })">DELETE</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
