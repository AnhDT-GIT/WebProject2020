@model WebProject01.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Thêm sản phẩm";
    Layout = "~/Views/Shared/_CustomLayout.cshtml";
}

<h2></h2>
<div class="row">
    <div class="col-lg-12">
        <div class="section_title text-center mb-80">
            <!--<span>Thực Đơn</span>-->
            <!--<h3>Thêm sản phẩm</h3>-->
            <h3>@Model.Heading</h3>
        </div>
    </div>
</div>


@using (Html.BeginForm(Model.Action, "Products"))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)

    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-md-6 col-lg-6">
                <div class="form-horizontal">
                    <h4></h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.ProdName, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        @Html.Label("Tên sản phẩm: ")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProdName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProdName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.ProdDes, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        @Html.Label("Mô tả sản phẩm: ")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProdDes, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProdDes, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.ProdImg, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        @Html.Label("Đường dẫn hình ảnh: ")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProdImg, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProdImg, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.ProdPrice, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        @Html.Label("Giá sản phẩm: ")
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ProdPrice, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ProdPrice, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <!--@Html.LabelFor(model => model.Category, htmlAttributes: new { @class = "control-label col-md-2" })-->
                        @Html.Label("Danh mục sản phẩm: ")
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.Category, new SelectList(Model.Categories, "Id", "CateName"), "", new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Category)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
